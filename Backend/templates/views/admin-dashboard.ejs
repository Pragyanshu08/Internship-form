<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f4f4;
      color: #333;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
      color: #111;
    }

    .table-container {
      width: 100%;
      overflow-x: auto;
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: rgba(0, 0, 0, 0.08) 0 4px 12px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      min-width: 900px;
      font-size: 15px;
    }

    thead {
      background-color: #333;
      color: #fff;
    }

    th, td {
      text-align: left;
      padding: 12px 16px;
      border-bottom: 1px solid #ccc;
    }

    

    th {
      text-transform: uppercase;
      font-weight: bold;
      letter-spacing: 0.5px;
    }

    td {
      color: #222;
      vertical-align: top;
    }

    a.view-button {
      display: inline-block;
      background-color: #333;
      color: #fff;
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 13px;
      text-decoration: none;
      transition: background-color 0.2s ease;
    }

    a.view-button:hover {
      background-color: #555;
    }

    .no-resume {
      color: #888;
      font-style: italic;
    }

    @media (max-width: 768px) {
      table {
        font-size: 14px;
      }

      th, td {
        padding: 10px;
      }

      .table-container {
        padding: 10px;
      }
    }

    @media (max-width: 500px) {
      table {
        font-size: 13px;
      }

      h1 {
        font-size: 22px;
      }
    }
  </style>
</head>
<body>

  <div style="display: flex; justify-content: flex-end; margin-bottom: 20px;">
  <form action="/api/admin/logout" >
    <button type="submit" style="
      background-color: #e74c3c;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
    ">Logout</button>
  </form>
  </div>

  <h1>Student Resume Submissions</h1>

  <div class="table-container">
    <table>
      <thead>
  <tr>
    <th>S. No.</th> <!-- New column -->
    <th>Name</th>
    <th>Email</th>
    <th>Domains</th>
    <th>Skills</th>
    <th>Experience</th>
    <th>Resume</th>
    <th>Details</th>
  </tr>
</thead>
      <tbody>
  <% students.forEach((student, index) => { 
       const lastExp = student.experiences?.[student.experiences.length - 1];
       const submittedAt = new Date(student.createdAt).toLocaleString('en-IN', {
         day: '2-digit',
         month: 'short',
         year: 'numeric',
         hour: '2-digit',
         minute: '2-digit',
         hour12: true
       });
  %>
    <tr>
      <td><%= index + 1 %></td> <!-- Serial number -->
      <td><%= student.firstName %> <%= student.lastName || '' %></td>
      <td><%= student.email %></td>
      <td><%= student.domains.join(', ') %></td>
      <td><%= student.skills.join(', ') %></td>
      <td>
        <%= student.experiences?.length || 0 %>
        <% if (lastExp?.position) { %>
          <br><small style="color:#555;"><%= lastExp.position %></small>
        <% } %>
      </td>
      <td>
        <% if (student.resumeFileName) { %>
          <a href="/api/admin/login/uploads/<%= student.resumeFileName %>" target="_blank" class="view-button">Download</a>
        <% } else { %>
          <span class="no-resume">N/A</span>
        <% } %>
      </td>
      <td>
        <a href="/public/student/<%= student.slug %>" class="view-button">View</a>
        <br><small style="color: #888;">Submitted: <%= submittedAt %></small>
      </td>
    </tr>
  <% }) %>
</tbody>


    </table>
  </div>

</body>
</html>
